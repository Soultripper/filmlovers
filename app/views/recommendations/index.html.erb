
<%= render layout: 'layouts/user_simple' do%>
  <div class="twelve columns">
    <dl class="tabs two-up">
      <dd class="active"><a href="#recommendationsForYou"><%= "Friends recommend (#{friends_recommmenations.count})" %></a></dd>
      <dd class="hide-for-small"><a href="#recommendationsByYou"><%= "You recommend (#{user_recommendations.count})" %></a></dd>
    </dl>
    <ul class="tabs-content" id="userList">
      <li class="active" id="recommendationsForYouTab">
        <ol >
          <% friends_recommmenations.each do |recommendation| %>
            <%= render partial: 'for_user', locals: {film: recommendation.recommendable, user: recommendation.user, recommendation: recommendation} %>
          <% end %>
        </ol>
      </li>
      <li id="recommendationsByYouTab">
        <ol >
          <% user_recommendations.each do |recommendation| %>
            <%= render partial: 'by_user', locals: {film: recommendation.recommendable, user: recommendation.friend, recommendation: recommendation} %>
          <% end %>
        </ol>
      </li>
    </ul>
  </div>
<% end %>

