<%= image_tag 'filmlovers-backdrop-profile.jpg', :class=>'bg' %>
<section>       
  <div id="container_demo" >
    <div id="signupWrapper">
      <div id="login" class="animate form five columns centered">
        <h2>your profile</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, validate: true) do |f| %>
          <%#= devise_error_messages! %>

          <p>
            <%= f.label :username, 'username', :class=>'uname', data:{icon: 'u'} %>
            <%= f.text_field :username, required: :required, placeholder: 'myscreename', :validate => true %>
          </p>

          <p>
            <%= f.label :email, 'email', :class=>'youmail', data:{icon: 'e'} %>
            <%= f.email_field :email, required: :required, placeholder: 'mysupermail@mail.com' %>
          </p>

          <p>
            <%= f.label :first_name, 'first name', :class=>'fname', data:{icon: 'u'}  %>
            <%= f.text_field :first_name, placeholder: 'Clark', :validate => true %>
          </p>

          <p>
            <%= f.label :last_name, 'last name', :class=>'lname', data:{icon: 'u'}  %>
            <%= f.text_field :last_name,  placeholder: 'Kent', :validate => true %>
          </p>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>


          <p>
            <%= f.label  :password, 'new password', :class=>'youpasswd', data:{icon: 'p'} %>  
            <%= f.password_field :password,  :autocomplete => "off" %>
          </p>

          <p>
            <%= f.label :password_confirmation, 'confirm new password', :class=>'youpasswd', data:{icon: 'p'} %>
            <%= f.password_field :password_confirmation, placeholder: 'eg. X8df!90EO' %>
          </p>

          <% if !current_user.encrypted_password.empty? %>
            <p>
              <%= f.label :current_password, 'current password (to confirm your changes)', :class=>'youpasswd', data:{icon: 'p'} %>
              <%= f.password_field :current_password, placeholder: 'eg. X8df!90EO' %>
            </p>
          <% end %>

          <p class="signin button2"> 
            <%= link_to :back do %>
              <input type="button" value="Back" class="left"/> 
            <% end %>
          </p>

          <p class="signin button2"> 
            <input type="submit" value="Update"/> 
          </p>
        <% end %>


      </div>
    </div>
  </div>
</section>