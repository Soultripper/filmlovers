  <div class="large-8 large-offset-2 small-12 columns end">
    <h2>create new password...</h2>
    <%= devise_error_messages! %>
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <label for="password"></label>
      <%= f.input :password, :autofocus => true, hint: false, label: false, placeholder: 'New password' %>
      <label for="password_confirmation"></label>
      <%= f.input :password_confirmation, hint: false, label: false, placeholder: 'Confirm your new password' %>
      <div class="row">
        <div class="large-6 small-6 columns">
          <input type="submit" name="changepassword" id="changepasswordbtn" value="Change password" tabindex="2">
        </div>
      </div>
    <% end %>
  </div>
