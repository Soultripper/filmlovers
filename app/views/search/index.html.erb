
<%#if @searcher.postcode? %>
  <%#= render partial: 'cinemas', object: @results %>
<%# else %>
  <div class="full-row page-title  margin-bottom">
    <div class="row">
      <div class="large-12 small-12 columns">
        <h1><%= "Searching for films with '#{params[:q]}'" %></h1>
      </div>
    </div>
  </div>
  <%= render partial: 'films/films', locals: {films:  @results} %>
<%# end %>


<script>
  $(function(){
    window.setTimeout(function(){$('a[data-rel="search"]').click()}, 150)
  })
</script>