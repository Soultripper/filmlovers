<%= render layout: 'layouts/user', object: user  do %>
<%= render partial: 'list_meta_tags', locals: {films_list: list} %>

<div id="viewContent"  class="twelve columns" >

    <% if viewing_own? %>
      <div class="nine columns user-actions right">        
        <%= link_to edit_list_path(list), :class=>'right' do %>
          <%= awesome 'pencil' %> edit
        <% end %>
      </div>
    <% end %>

  <div class="nine columns films" id="userList">
    <div class="info">
      <h3 class="list-name"><%= list.name %></h3>
      <p><%= list.description %></p>
      <hr/>
    </div>

    <ol>
      <% list.films.each_with_index do |film, index| %>
        <li >  
          <div class="two columns">
            <% if film.has_backdrop? %>
            <%= link_to film_path(film), title: film.title do %>
              <%= backdrop(film, film.backdrops[0], 'w154') %>
            <% end %>
            <% end %>
          </div>
          <div class="six columns">
            <%= link_to film_path(film), title: film.title do %>
              <label class="title"><%= "#{index+1}. #{film.title}" %></label>
            <% end %>
            <div class="film-summary" style="max-height:50px;overflow-y:hidden">
              <p><%=overview film, 145%></p>
            </div>
            <div class="film-summary" style="display:none">
              <p><%= film.overview %></p>
              <p><%= directed_by film %></p>
              <p><%= starring film %></p>
              <p><%= runtime film %> | <%= film.year %></p>
            </div>
            <%= link_to 'more info', 'javascript:void(0)', title: film.title, :class=>'overview-toggle' %>
          </div> 
          <div class="one columns pagination-centered shop" >
              <%= render partial: 'shared/amazon_search', locals: {title: "#{film.title} #{film.year}"} %>
              <%= render partial: 'shared/itunes', locals: {title: "#{film.title}"} %>
          </div> 
          <div class="three columns">
            <% if logged_in? %>
              <div class="film-actions-vertical pagination-centered" >
                <% [:watched, :loved, :owned].each do |action| %>
                  <button>
                    <%= action_icon action, film %>
                  </button>
                <% end %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
  <div class="three columns">
    <div class="pagination-centered">
      <%= render partial: 'shared/lovefilm_300x250' %>                      
    </div>
  </div>
</div>

<script>
  text = 1
  $(".overview-toggle").click(function () {
    $(this).siblings('.film-summary').toggle();
    caption = $(this).text() == 'more info' ? 'close' : 'more info'
    $(this).text(caption)
    // $(this).siblings('.film-summary-main').toggle();
  });
</script>
<% end %>