<div id="viewContent"  class="twelve columns" >

  <div class="row collapse" id="user-films-banner">
    <div class="one columns">
      <%= image_tag @user.gravatar_url %>
    </div>
    <div class="three columns user-name">
       <h3><%= @user.name %></h3>
        <p><%= @films_list.name %></p>
    </div>
    <div class="three columns user-actions">
       <h3 class="list-name">
        <span id="user-films-count"><%= @films_list.film_ids.count %></span> films
      </h3>
      <%= link_to('Edit', edit_user_list_path(current_user, @films_list), :class => 'radius button') if viewing_own? %>
    </div>
  </div>

  <div class="row">
    <div class="three columns">
      <div class="panel">
        <p><%= @films_list.description %></p>
      </div>
      <div class="pagination-centered">
        <%= render partial: 'shared/lovefilm_300x250' %>                      
      </div>
    </div>
    <div class="nine columns films" id="userList">
      <ol>
        <% @films_list.films.each_with_index do |film, index| %>
          <li >  
            <div class="two columns">
              <%= link_to film_path(film), title: film.title do %>
                <%= backdrop(film, 'w154') %>
              <% end %>
            </div>
            <div class="five columns">
                <%= link_to film_path(film), title: film.title do %>
                  <label class="title"><%= "#{index+1}. #{film.title}" %></label>
                <% end %>
                <p class="film-summary"><%= overview film %></p>
                <%#= link_to 'details', film_path(film), title: film.title  %>
            </div> 
            <div class="two columns pagination-centered">
                <%= render partial: 'shared/amazon_search', locals: {title: "#{film.title} #{film.year}"} %>
                <%= render partial: 'shared/itunes', locals: {title: "#{film.title}"} %>
            </div> 
            <div class="three columns">
              <div class="film-actions-vertical pagination-centered" >
                <% [:watched, :loved, :owned, :queued].each do |action| %>
                  <button>
                    <%= action_icon action, FilmPresenter.new(current_user, film) %>
                  </button>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ol>
    </div>

  </div>

