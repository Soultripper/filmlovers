
  <input name="_method" type="hidden" data-bind="value: dataMethod()">
  <label>How will this list be known?</label>
  <input type="text" name="films_list[name]" data-bind="value: name" placeholder='Title'/>
  <label>What's the reasoning?</label>
  <textarea  name="films_list[description]" data-bind="value: description" placeholder='Description' cols="40" rows="20"></textarea>

    <div class="twelve columns">
      <div class="row collapse">
        <div class="one mobile-one columns">
          <span class="prefix"><%= image_tag "search.png"%></span>
        </div>
        <div class="six mobile-three columns">
          <input type="text" id="quick_search" size="30" value="" autocomplete="off" class="ss-input">
        </div>
        <div class="three mobile-three columns">
          <a data-bind="attr: {href: url}" data-remote=true class ='radius button'>Cancel</a>
          <button data-bind="click: save" class="button radius">Save</button>
          <button data-bind="click: $root.remove" class="button radius">Delete</button>

        </div>

      </div>
    </div>

    <!-- Thumbnails -->
    <div class="twelve columns" >
      <div class="row films" id="userList">

        <ol data-bind="foreach: films" class="twelve columns sortable" >
          <li data-bind="attr: {'data-item-id': film.id()}">  
            <div class="row">
              <div class="one column">
                <span data-bind="text: position"></span>
              </div>
              <div class="two columns">
                <a data-bind="attr: { href: film.url, title: film.title }" >
                  <img data-bind="attr: {src: film.thumbnail, title: film.title }"/>
                </a>
              </div>
              <div class="six columns">
                <h4 data-bind="text: film.title"></h4>
                <h5 data-bind="text: film.release_date"></h5>
              </div> 
              <div class="four columns">
                <div class="film-actions-vertical pagination-centered">
                  <button data-bind="click: $root.removeFilmItem">
                    <i class="icon-remove icon-2x"></i>
                   </button>
                </div>
              </div>
            </div>
          </li>
        </ol>

