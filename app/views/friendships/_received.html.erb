<div class="friendship">
  <%= link_to change_friendship_path(friend, :confirm), method: :put, remote: true, data: {friendship: :confirm, state: :received} do %>
    <img src="/assets/site-basics/approve-button.png" width="52" height="52" alt="Approve" />
  <% end %>
  <%= link_to change_friendship_path(friend, :ignore), method: :put, remote: true, data: {friendship: :ignore, state: :received} do %>
    <img src="/assets/site-basics/ignore-button.png" width="52" height="52" alt="Ignore" />
  <% end %>
  <%= link_to friendship_path(friend), method: :delete, remote: true, data: {friendship: :delete, state: :received} do %>
    <img src="/assets/site-basics/remove-button.png" width="52" height="52" alt="Remove" />
  <% end %>
</div>