                    <div class="upper">
                      <img src="img/content/django-unchained.jpg" width="342" height="513" alt="Django Unchained" />
                    </div>
                    <div class="lower">
                      <ul>
                        <li class="complete watched"><a href="#">Watched</a></li>
                        <li class="loved"><a href="#">Loved</a></li>
                        <li class="owned"><a href="#">Own</a></li>
                      </ul>
                      <p><a href="#" data-reveal-id="filminfo" class="button">More info</a></p>
                    </div>
                  </div>
                  <ul class="user-rankings">
                    <li class="watched"><a href="#">21</a></li>
                    <li class="loved"><a href="#">11</a></li>
                    <li class="owned"><a href="#">2</a></li>
                  </ul>
                </div>
