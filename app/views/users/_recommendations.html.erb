

  <div class="twelve columns">
    <dl class="tabs two-up">
      <dd class="active"><a href="#recommendationsForYou"><%= "Friends recommend (#{presenter.friends_recommmenations.count})" %></a></dd>
      <dd class="hide-for-small"><a href="#recommendationsByYou"><%= "You recommend (#{presenter.user_recommendations.count})" %></a></dd>
    </dl>
    <ul class="tabs-content" id="userList">
      <li class="active" id="recommendationsForYouTab">
        <ol >
          <% presenter.friends_recommmenations.each do |recommendation| %>
            <%= render partial: 'recommendations/for_user', locals: {film: recommendation.recommendable, user: recommendation.user, recommendation: recommendation} %>
          <% end %>
        </ol>
      </li>
      <li id="recommendationsByYouTab">
        <ol >
          <% presenter.user_recommendations.each do |recommendation| %>
            <%= render partial: 'recommendations/by_user', locals: {film: recommendation.recommendable, user: recommendation.friend, recommendation: recommendation} %>
          <% end %>
        </ol>
      </li>
    </ul>
  </div>

