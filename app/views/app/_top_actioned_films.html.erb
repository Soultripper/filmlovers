<section>
  <p class="title" data-section-title><a href="#panel1"><%= "Most #{action.capitalize}" %></a></p>
  <div class="content" data-section-content>
      <ul class="large-block-grid-5 small-block-grid-2 film-tabs text-center">
        <% Films.top_for(action, 5).each_with_index do |film, index| %>
          <li>
            <%= poster_link film, 'w185' %>
             <span><%= index+1 %></span>
             <%= film.title %>
          </li>
        <% end %>
      </ul>
  </div>
</section>