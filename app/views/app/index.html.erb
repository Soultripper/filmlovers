
<div class="twelve columns">

  <%if !logged_in? %>
  <div class="row banner collapse sign-in-backdrop" id="banner-sign-in">
    <div class="six columns centered">
      <p id="greeting-text">
        <h1>Welcome to filmlovers</h1>
        <h2>Watch, share and discover films </h2>
        <h3> Sign up for <strong>free</strong> to create film lists and record your love of film</h3>
      </p>
    </div>
  </div>
<% else %>


  <div class="row" id="banner-row">
    <div class="twelve columns">
      <h3 class="show-for-small"></h3>
      <div class="panel" id="films_recently_watched">
        <p class="section_description">Popular films at filmlovers</p>
        <div class="eleven columns centered">
        <% FilmsRepository.top_for(:watched, 10).each do |film| %>
          <div class="film-small">
            <button class="tile counter">
              <i class="icon-eye-open icon-2x"></i>
              <label><%= film.score_for(:watched).round 0 %></label>
            </button>
            <%= link_to film do %>
              <%= poster(film, 'w90') %>
            <% end %>
          </div>
        <% end %>
      </div>
        <div style="clear:both"></div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row" id="icon-descriptions">
    <div class="four columns">
      <div class="radius panel pagination-centered">
        <h4>Watched</h4>
         <i class="icon-eye-open icon-3x actioned"></i>
         <p>remember films you have watched.</p>
      </div>
    </div>
    <div class="four columns">
      <div class="radius panel pagination-centered">
        <h4>Loved</h4>
         <i class="icon-heart icon-3x actioned"></i>
         <p>you know when you loved a film!</p>
      </div>
    </div>
    <div class="four columns">
      <div class="radius panel pagination-centered">
        <h4>Owned</h4>
        <i class="icon-home icon-3x actioned"></i>
        <p>what films do you have at home?</p>
      </div>
    </div>
<!--     <div class="three columns">
      <div class="radius panel pagination-centered">
        <h4>Queued</h4>
        <i class="icon-pushpin icon-3x actioned"></i>
        <p>save for later, or to add to your lists</P>
      </div>
    </div> -->
  </div>

  <div class="row ">
    <div class="twelve columns">
      <h6 class="heading_divider">Current Films</h6>
    </div>
    <div class="four mobile-two columns trend">
      <%= link_to trend_path(:now_playing) do %>
        <%=image_tag 'cinema.png', width:'100%' %>
        <label>In Cinemas</label>
      <% end %>
    </div>
    <div class="four mobile-two columns trend">
      <%= link_to trend_path(:popular) do %>
        <%=image_tag 'cinema.png', width:'100%' %>
        <label>Popular</label>
      <% end %>
    </div>
    <div class="four mobile-two columns trend">
      <%= link_to trend_path(:upcoming) do %>
        <%=image_tag 'cinema.png', width:'100%' %>
        <label>Upcoming</label>
      <% end %>
    </div>
  </div>

  <div class="row" id="search_row">
    <div class="twelve columns">
      <div class="radius panel">
          <%= form_tag(search_films_path, method: :get) do%>
          <div class="row collapse">
            <div class="ten mobile-three columns">
              <input type="text" name="query" />
            </div>
            <div class="two mobile-one columns">
              <%= submit_tag 'Search', :class=>"postfix button expand", :disable_with => "Searching..." %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

