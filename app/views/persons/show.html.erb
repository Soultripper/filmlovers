
    
  <!-- Header and Nav -->
  
  <div class="row">
    <div class="seven columns">
      <h1><%= @person_view.name %> </h1>
      
    </div>
  </div>
  

  <div class="row" id="biography">
    <div class="three columns">
     <%= image_tag @person_view.person.profile('w342') %>
    </div>
    <div class="five columns">
      <h4>Biography</h4>
      <div class="row">
        <div class="twelve columns">
          <p><%= @person_view.biography %></p>
        </div>
      </div>
    </div>
     <div class="four columns credits" id="credits">
      <dl class="tabs">
        <dd class="active"><a href="#cast">Cast</a></dd>
        <dd><a href="#crew">Crew</a></dd>
      </dl>
      <ul class="tabs-content">
        <li class="active" id="castTab">
          <div class="row">
            <div class="twelve columns crew">
              <ul class="disc credits">
                <% @person_view.portfolio.cast.each do |person| %>
                <li style="border-bottom: dotted 1px lightblue;">
                  <%= link_to film_path(person.id), remote:true do %>
                    <%= content_tag :span, person.title, {:class => 'person link'} %>
                  <% end %>
                  <span class="right"> <%= person.character %> </span>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </li>
        <li id="crewTab">
          <div class="row">
            <div class="twelve columns crew">
              <ul class="disc credits">
              <% @person_view.portfolio.crew.each do |person| %>
                <li style="border-bottom: dotted 1px lightblue;">
                  <%= link_to film_path(person.id), remote:true do %>
                    <%= content_tag :span, person.title, {:class => 'person link'} %>
                  <% end %>
                  <span class="right"> <%= person.job %> </span>
                </li>
                <% end %>
              </ul> 
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
  
  <div class="row">
     <h4>Films</h4>
      <div class="row" id="similar">
        <div class="twelve columns">
          <div class="row films">
          <% @person_view.films.each do |film| %>
            <div class="film-small">
              <% if film.film.id %>
              <%= link_to film_path(film.film.id), remote:true do %>
                <%= image_tag(film.thumbnail('w90'), :title => film.title, :class => 'small') %>
              <%end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>