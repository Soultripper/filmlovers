  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# video: http://ogp.me/ns/video# filmlovers-staging: http://ogp.me/ns/fb/filmlovers-staging# filmlovers: http://ogp.me/ns/fb/filmlovers#">
    <!-- TradeDoubler site verification 2247239 -->
    <meta name="msvalidate.01" content="F4694085705A9BABAA80DDD452A3681B" />

    <meta charset="utf-8" />
    
    <!-- Uncomment to make IE8 render like IE7 -->
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
    
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0">
   

    <%= favicon_link_tag 'favicon.ico' %>

    <%= display_meta_tags site: "filmlovr.com", 
                          reverse: true,
                          title: "Discover films with friends" , 
                          description: "Start sharing your love of film with friends! A films social network, where you can catalogue films you've loved, recommend a film to friends, find what's showing in cinemas and what's coming soon, and get detailed film information from over 120,000 films!", 
                          keywords: 'filmlovers, film recommendations, latest movies, discover films, filmlovr, movie lovers, latest films, in cinemas, now showing, popular films, film library, film catalogue',
                          publisher: "https://www.google.com/+FilmlovrCom"  %>

    <%= stylesheet_link_tag    "application" %>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "http://js.pusher.com/2.0/pusher.min.js" %>

    <%= csrf_meta_tags %> 

    <%= render partial: 'layouts/userecho' %> 
    <%= render partial: 'layouts/google_analytics' %>

    <% if logged_in? %>
      <script type="text/javascript">
        pusher.init('<%= Pusher.key %>', '<%= current_user.notifier.channel %>')
      </script>
    <% end %>
  </head>
  <body ontouchstart="">
    <%= render :template => 'facebook/sdk' %>
    <%= render partial: 'layouts/header' %>
    <%= yield %>
    <%= render partial: 'layouts/footer' %>

    <div id="filminfo" class="reveal-modal medium">
  </body>
</html>