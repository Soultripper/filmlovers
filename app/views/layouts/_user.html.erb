<% present(current_user, UserPresenter) do |presenter| %>
  <div class="full-row inner-hero margin-bottom">
    <div class="row">
      <div class="large-12 small-12 columns">
        <div class="right-fade"></div>
        <div class="left-fade"></div>
        <%= presenter.cover_image %>
      </div>
    </div>
  </div>
  <div class="row margin-bottom">
    <div class="large-12 small-12 columns">
      <div class="pod margin-bottom account">
        <%= presenter.avatar %>
       
          <h2><%= presenter.username %> - Your profile</h2>
          <a href="#" class="secondary button">Log out</a>
        
      </div>
    </div>
  </div>
  <div class="row margin-bottom">
    <div class="large-12 small-12 columns">
      <div class="inner-tabs">
        <div class="section-container auto" data-section>
          <section>
            <p class="title" data-section-title><a href="#panel1">Films</a></p>
            <div class="content" data-section-content>
              <div class="row">
                <div class="large-2 small-6 columns">
                  <div class="flip-container">
                    <div class="upper">
                      <img src="assets/content/django-unchained.jpg" width="342" height="513" alt="Django Unchained" />
                    </div>
                    <div class="lower">
                      <ul>
                        <li class="complete watched"><a href="#">Watched</a></li>
                        <li class="loved"><a href="#">Loved</a></li>
                        <li class="owned"><a href="#">Own</a></li>
                      </ul>
                      <p><a href="#" data-reveal-id="filminfo" class="button">More info</a></p>
                    </div>
                  </div>
                  <ul class="user-rankings">
                    <li class="watched"><a href="#">21</a></li>
                    <li class="loved"><a href="#">11</a></li>
                    <li class="owned"><a href="#">2</a></li>
                  </ul>
                </div>
