<div class="twelve columns user-details">

  <div class="user-banner">
    <div class="one columns user-image">
      <%= image_tag user.gravatar_url %>
    </div>
    <div class="six columns user-name">
       <h3><%= user.username %></h3>
    </div>
    <div class="five columns nav-container">

      <dl class="sub-nav right">
        <% [:watched, :loved, :owned].each do |action| %>
        <dd>
            <%= link_to user_film_path(user, action), alt: action, title: action do %>
              <%= icon_for action %> <label><%= user.actions_for(action).count %></label>
            <% end %>
        </dd>
        <% end %> 
         <dd>
          <%= link_to user_lists_path(user) do %>
            <%= awesome :list %> <label> <%=user_lists.count %> </label>
          <% end %>
        </dd>
      </dl>
    </div>
  </div>

  <%= yield %>
</div>

