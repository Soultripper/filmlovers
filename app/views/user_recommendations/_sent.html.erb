<% present(film.details, film.details_presenter) do |presenter| %>
  <li>
    <div class="one columns">
      <% present(user, UserPresenter) do |user_presenter| %>
       <%= user_presenter.avatar %>
      <% end %>
    </div>    
    <div class="two columns">
      <%= presenter.main_backdrop :small  %>
    </div>
    <div class="six columns">
      <%= link_to film_path(film), title: film.title do %>
        <label class="title"><%= "#{film.title}" %></label>
      <% end %>
      <div class="film-summary" style="max-height:50px;overflow-y:hidden">
        <p><%=presenter.overview 145%></p>
      </div>
      <div class="film-summary" style="display:none">
        <p><%= presenter.overview %></p>
        <p><%= presenter.year_and_director%></p>
        <p><%= presenter.starring %></p>
        <p><%= presenter.duration %> | <%= presenter.year %></p>
      </div>
      <%= link_to 'more info', 'javascript:void(0)', title: presenter.title, :class=>'overview-toggle' %>
    </div> 
    <div class="one columns pagination-centered shop" >
        <%= render partial: 'adverts/amazon_search', locals: {title: "#{presenter.title} #{presenter.year}"} %>
        <%= render partial: 'adverts/itunes', locals: {title: "#{presenter.title}"} %>
    </div> 
    <div class="two columns">
    </div>
  </li>
<% end %>