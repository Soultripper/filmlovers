
<div class="twelve columns">
  <dl class="tabs two-up">
    <dd class="active"><a href="#recommendationsForYou"><%= "Friends recommend (#{received.count})" %></a></dd>
    <dd class="hide-for-small"><a href="#recommendationsByYou"><%= "You recommend (#{sent.count})" %></a></dd>
  </dl>
  <ul class="tabs-content" id="userList">
    <li class="active" id="recommendationsForYouTab">
      <ol >
        <% received.each do |recommendation| %>
          <%= render partial: 'received', locals: {film: recommendation.recommendable, user: recommendation.user, recommendation: recommendation} %>
        <% end %>
      </ol>
    </li>
    <li id="recommendationsByYouTab">
      <ol >
        <% sent.each do |recommendation| %>
          <%= render partial: 'sent', locals: {film: recommendation.recommendable, user: recommendation.friend, recommendation: recommendation} %>
        <% end %>
      </ol>
    </li>
  </ul>
</div>

