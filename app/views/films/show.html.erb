            <iframe  src='<%#= @film_view.trailer %>' frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  <%# end %> -->

  <% if @film_view.similar_films? %>
  <div class="row">
     <h4>Similar Films</h4>
      <div class="row" id="similar">
        <div class="twelve columns">
          <div class="row films">
          <% @film_view.similar_films.each do |film| %>
            <div class="film-small">
              <% if film.film.id %>
              <%= link_to film_path(film.film.id), remote:true do %>
                <%= image_tag(film.thumbnail('w90'), :title => film.title, :class => 'small') %>
              <%end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
<div id="filmTrailersModal" class="reveal-modal xlarge">
  <div class="row" id="trailers">
      <div class="twelve columns">
        <div class="flex-video">
          <iframe  src='<%= @film_view.trailer %>' frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
  </div>
  <a class="close-reveal-modal">Ã—</a>
</div>


