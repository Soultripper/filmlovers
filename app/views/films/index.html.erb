<%= render layout: 'layouts/viewmodel', locals: {model: 'FilmsPageModel'} do %>
<div class="row" >
  <!-- Side Bar -->
  <div class="two mobile-four columns pagination-centered">
    <div class="film-actions-vertical">
      <div class="tiled"><i class="icon-eye-open icon-4x" ondragover='allowDrop(event)' ondrop='drop(event)' ></i></div>
      <div class="tiled"><i class="icon-heart icon-4x" ondragover='allowDrop(event)' ondrop='drop(event)' ></i></div>
      <div class="tiled"><i class="icon-pushpin icon-4x" ondragover='allowDrop(event)' ondrop='drop(event)' ></i></div>
    </div>
    <div class="hide-for-small panel">
      <label>
        Viewing Films
      </label>
      <h5 class="subheader" data-bind="text: description">
        <%= params[:query] %>
      </h5>
    </div><a href="#"></a>
    <div class="panel callout radius" align="center">
      <p>
        Page <span data-bind="text: page_no"/> of <span data-bind="text: total_pages">
      <p>
      <h6>
        <span data-bind="text: total_results"/> films
      </h6>
    </div>
    <ul class="pagination">
      <%#= page_search_results(@film_search_results.page_no, @film_search_results.page_total) %>
    </ul>
  </div>
  <!-- End Side Bar --> 
  <%= render partial: 'films/film' %>
</div>
<% end %>