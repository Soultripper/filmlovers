<div id="filmsActioned" class="twelve columns">

  <div class="row film-banner">
    <div class="two columns film">
      <%= poster_link film, 'w154' %>
    </div>
    <div class="six columns">
      <div id="aff-banner">
        <a href="http://www.awin1.com/cread.php?s=156754&v=2481&q=91785&r=171645" target="_blank">
          <img src="http://www.awin1.com/cshow.php?s=156754&v=2481&q=91785&r=171645" border="0">
        </a>
      </div>      
      <h3 class="film-title">
        <%= link_to film_path(film) do %>
          <%= title_with_year film %>
        <% end %>
      </h3>
      <h6><%= directed_by film %></h6>
      <h6><%= starring film %></h6>
    </div>
    <div class="columns trailer">
     <%= trailer film %>
    </div>
  </div>

  <div id="contentHolder">
    <div class="row user-list">
      <div class="two columns">
        <% [:watched, :loved, :owned].each do |action| %>
          <div class="counter">
            <%= link_to users_film_path(film, action) do %>
              <%= icon_for action, user_action==action %>
              <label><%= film.users[action].count %></label>
            <% end %>
          </div>
        <% end %> 
      </div>
      <div class="ten columns">
        <% @users.each do |user| %>
          <div class="user-avatar left">
            <%= link_to user_path(user) do %>
              <%= image_tag user.gravatar_url %>
              <label><%= user.name %></label>
             <% end %>
            <% [:watched, :loved, :owned].each do |action| %>
              <%= link_to user_film_path(user, action) do %>
                <%= icon_for action %>
                <label style="display:inline"><%= user.films[action].count %> </label>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

