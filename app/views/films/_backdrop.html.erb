<% set_meta_tags :title => "#{title_with_year(film)} - images" %>

<!-- backdrops -->
<% if film.has_backdrop? %>
      <div id='featured'>
        <% film.backdrops.each do | backdrop | %>
          <%= backdrop_image backdrop %>
        <% end %>
      </div>
<% end %>

<script> $("#featured").orbit({directionalNav:true, fluid:false, timer:false})</script>