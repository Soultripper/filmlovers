class UserFilmQueueService

  attr_reader :user

  def initialize(user)
    @user = user
  end

  def queue
    user.films_queue
  end

  def insert(film_id)
    queue.insert film_id
  end

  def remove(film_id)
    queue.remove film_id
  end

  def move(film_id, to_queue)
    to_queue.insert film_id
    remove film_id
  end

  def films
    queue.members
  end
end